    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "go",
            "request": "launch",
            "program": "main.go",
            "mode": "auto",
            "env": {},
            "args": ["--mdns"],
            "internalConsoleOptions":"openOnSessionStart"
            
        },
        {
            "name": "Attach to local process",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "${workspaceFolder}",
            "port": 2345,
            "host": "127.0.0.1"
        }
    ]
}